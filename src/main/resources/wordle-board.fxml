<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.julie.wordle.WordleController">
    <AnchorPane prefHeight="200" prefWidth="200">
      <children>
         <VBox fx:id="mainVbox" alignment="TOP_CENTER" prefHeight="620.0" prefWidth="400.0" spacing="25.0">
            <children>
               <Label text="wordle" textFill="#e7f6ff">
                  <font>
                     <Font name="Courier New Bold" size="60.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Label>
               <GridPane fx:id="grid" alignment="CENTER" hgap="5.0" vgap="5.0">
                 <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                 </columnConstraints>
                 <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <VBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </VBox.margin>
               </GridPane>
               <Label fx:id="endGameLabel" textFill="#e7f6ff">
                  <font>
                     <Font name="Courier New" size="25.0" />
                  </font>
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </Label>
               <Label fx:id="answerLabel" textFill="#a3ddff">
                  <font>
                     <Font name="Courier New" size="25.0" />
                  </font>
               </Label>
               <Button fx:id="newGameButton" mnemonicParsing="false" text="New Game" textFill="#506eac">
                  <font>
                     <Font name="Courier New Bold" size="15.0" />
                  </font></Button>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
